.toggleBtnRecommended {
    position: relative;
}

.toggleBtnRecommended::after {
    content: '';
    position: absolute;
    bottom: 2px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    background-color: var(--accent-primary);
    border-radius: 50%;
    opacity: 0.7;
}
